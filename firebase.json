{
    "functions": {
        "runtime": "nodejs14",
        "source": "./functions"
    },
    "hosting": {
        "public": "./build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/robots.txt",
                "destination": "/robots.txt",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=86400"
                    }
                ]
            },
            {
                "source": "/sitemap.xml",
                "destination": "/sitemap.xml",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=86400"
                    }
                ]
            },
            {
                "source": "/",
                "function": "host"
            },
            {
                "source": "/editor/**",
                "function": "host",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=0,public,must-revalidate"
                    },
                    {
                        "key": "Cross-Origin-Embedder-Policy",
                        "value": "require-corp"
                    },
                    {
                        "key": "Cross-Origin-Opener-Policy",
                        "value": "same-origin"
                    }
                ]
            },
            {
                "source": "/profile/**",
                "function": "host"
            },
            {
                "source": "/@(manual|documentation)",
                "destination": "/index.html"
            },
            {
                "source": "/@(manual|documentation)/**",
                "destination": "/index.html"
            },
            {
                "source": "/android-chrome-192x192.png",
                "destination": "/android-chrome-192x192.png",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=86400"
                    }
                ]
            },
            {
                "source": "/android-chrome-512x512.png",
                "destination": "/android-chrome-512x512.png",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=86400"
                    }
                ]
            },
            {
                "source": "/favicon.ico",
                "destination": "/favicon.ico",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=86400"
                    }
                ]
            },
            {
                "source": "/favicon-16x16.ico",
                "destination": "/favicon-16x16.ico",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=86400"
                    }
                ]
            },
            {
                "source": "/favicon-32x32.ico",
                "destination": "/favicon-32x32.ico",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=86400"
                    }
                ]
            },
            {
                "source": "/asset-manifest.json",
                "destination": "/asset-manifest.json",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=86400"
                    }
                ]
            },
            {
                "source": "/static-manual-index.json",
                "destination": "/static-manual-index.json",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=86400"
                    }
                ]
            }
        ]
    }
}
