{
    "functions": {
        "runtime": "nodejs14",
        "source": "./functions"
    },
    "hosting": {
        "public": "./build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/manual_main.js",
                "destination": "/manual/main.js"
            },
            {
                "source": "/robots.txt",
                "destination": "/robots.txt"
            },
            {
                "source": "/sitemap.xml",
                "destination": "/sitemap.xml"
            },
            {
                "source": "/sitemap.xml.gz",
                "destination": "/sitemap.xml.gz"
            },
            {
                "source": "/",
                "function": "host"
            },
            {
                "source": "/editor/**",
                "function": "host",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=0,public,must-revalidate"
                    },
                    {
                        "key": "Cross-Origin-Embedder-Policy",
                        "value": "require-corp"
                    },
                    {
                        "key": "Cross-Origin-Opener-Policy",
                        "value": "same-origin"
                    }
                ]
            },
            {
                "source": "/profile/**",
                "function": "host"
            },
            {
                "source": "/@(manual|documentation)",
                "destination": "/index.html"
            },
            {
                "source": "/@(manual|documentation)/**",
                "destination": "/index.html"
            },
            {
                "source": "/android-chrome-192x192.png",
                "destination": "/android-chrome-192x192.png"
            },
            {
                "source": "/android-chrome-512x512.png",
                "destination": "/android-chrome-512x512.png"
            },
            { "source": "/favicon.ico", "destination": "/favicon.ico" },
            {
                "source": "/favicon-16x16.ico",
                "destination": "/favicon-16x16.ico"
            },
            {
                "source": "/favicon-32x32.ico",
                "destination": "/favicon-32x32.ico"
            },
            {
                "source": "/asset-manifest.json",
                "destination": "/asset-manifest.json"
            },
            {
                "source": "/static-manual-index.json",
                "destination": "/static-manual-index.json"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(jpg|svg|jpeg|png|eot|otf|ttf|ttc|woff|css|wasm|ico)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000,public,immutable"
                    }
                ]
            }
        ]
    }
}
